<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@color/black">
    
            <ImageView 
	        android:id="@+id/pd_logo_container"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:src="@drawable/pd_logo_horizontal_white"/>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        
        <ImageView 
	        android:id="@+id/pd_logo_container"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:src="@drawable/pd_logo"/>
                
                    
   		<ImageView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:src="@drawable/grid_vertical"
	        android:cropToPadding="true"
		    android:scaleType="centerCrop"/>
   		
   		<ImageView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:src="@drawable/grid_vertical"
	        android:cropToPadding="true"
		    android:scaleType="centerCrop"/>
   		
   		<ImageView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:src="@drawable/grid_vertical"
	        android:cropToPadding="true"
		    android:scaleType="centerCrop"/>  
		    
   		<ImageView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:src="@drawable/grid_vertical"
	        android:cropToPadding="true"
		    android:scaleType="centerCrop"/>    				
   	
        
    </LinearLayout>

    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
    
	    <LinearLayout
	        android:layout_width="wrap_content"
	        android:layout_height="match_parent"
	        android:orientation="vertical">
        
		    <ImageView 
		        android:id="@+id/grid_container_a"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:src="@drawable/grid"
		        android:cropToPadding="true"
		        android:scaleType="centerCrop"/>
		    
		    <ImageView 
		        android:id="@+id/grid_container_b"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:src="@drawable/grid"
		        android:cropToPadding="true"
		        android:scaleType="centerCrop"/>
		    
		    <ImageView 
		        android:id="@+id/grid_container_c"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:src="@drawable/grid"
		        android:cropToPadding="true"
		        android:scaleType="centerCrop"/>
		    
		    <ImageView 
		        android:id="@+id/grid_container_d"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:src="@drawable/grid"
		        android:cropToPadding="true"
		        android:scaleType="centerCrop"/>
		    
		    <ImageView 
		        android:id="@+id/grid_container_e"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:src="@drawable/grid"
		        android:cropToPadding="true"
		        android:scaleType="centerCrop"/>
	        
        </LinearLayout>
    
    
	    <ScrollView 
	        android:id="@+id/scrollView"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent">
	        
	        <LinearLayout 
			    android:layout_width="match_parent"
			    android:layout_height="match_parent"
			    android:orientation="vertical"
			    android:paddingLeft="15dp">
	
			    
			    <LinearLayout 
			        android:id="@+id/bike_frame_stack"
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:orientation="vertical"
			        android:layout_marginTop="20dp"
>
			        
			            <TextView
			        android:id="@+id/bike_frame_stack_title"
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:text="Bike Frame Stack"
			        android:textSize="22dp"
			        android:textColor="@color/white"/>
			            
			  		<EditText
				  		android:id="@+id/bike_frame_stack_edit"
				        android:layout_width="match_parent"
				        android:layout_height="wrap_content"
				        android:text=""
				        android:maxLength="3"
				        android:inputType="number"
				        android:textColor="@color/white"
				        android:clickable="true"
			        	
				        />
			  		
			  		<!-- android:onClick="showBikeStackPicker" -->
			        
	  		   		<!-- NumberPicker android:id="@+id/np_bike_stack"
					   android:layout_width="wrap_content"
					   android:layout_height="wrap_content"
					   android:
					   android:width="100dip"/-->
			        
			        
			    </LinearLayout>
			    
			        <LinearLayout 
			        android:id="@+id/bike_frame_reach"
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:orientation="vertical"
			        android:layout_marginTop="20dp">
			        
			            <TextView
			        android:id="@+id/bike_frame_reach_title"
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:text="Bike Frame Reach"
			        android:textSize="22dp"
			        android:textColor="@color/white"/>
			            
			  		<EditText
				  		android:id="@+id/bike_frame_reach_edit"
				        android:layout_width="match_parent"
				        android:layout_height="wrap_content"
				        android:text=""
				        android:maxLength="3"
				        android:inputType="number"
				        android:textColor="@color/white"
				        android:clickable="true"
			        	
				        />
			  		
			  		<!-- android:onClick="showBikeReachPicker" -->
			        
			        
			        
			    </LinearLayout>
			      
			        <LinearLayout 
			        android:id="@+id/fit_stack"
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:orientation="vertical"
			        android:layout_marginTop="20dp">
			        
			            <TextView
			        android:id="@+id/fit_stack_title"
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:text="Armrest Stack"
			        android:textSize="22dp"
			        android:textColor="@color/white"/>
			            
			  		<EditText
				  		android:id="@+id/fit_stack_edit"
				        android:layout_width="match_parent"
				        android:layout_height="wrap_content"
				        android:text=""
				        android:maxLength="3"
				        android:inputType="number"
				        android:textColor="@color/white"
				        />
			        
			        
			        
			    </LinearLayout>
			    
			    <LinearLayout 
			        android:id="@+id/fit_reach"
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:orientation="vertical"
			        android:layout_marginTop="20dp">
			        
			        <TextView
			        android:id="@+id/fit_reach_title"
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:text="Armrest Reach"
			        android:textSize="22dp"
			        android:textColor="@color/white"/>
			            
			  		<EditText
				  		android:id="@+id/fit_reach_edit"
				        android:layout_width="match_parent"
				        android:layout_height="wrap_content"
				        android:text=""
				        android:maxLength="3"
				        android:inputType="number"
				        android:textColor="@color/white"
				        />
			        
			        
			        
			    </LinearLayout> 
			    
			    
			    <LinearLayout 
			        android:id="@+id/stem_angle"
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:orientation="vertical"
			        android:layout_marginTop="20dp">
			        
			        <TextView
			        android:id="@+id/stem_angle_title"
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:text="Stem Angle"
			        android:textSize="22dp"
			        android:textColor="@color/white"/>
			            
			  		<!-- EditText
				  		android:id="@+id/stem_angle_edit"
				        android:layout_width="match_parent"
				        android:layout_height="wrap_content"
				        android:text=""
				        android:textColor="@color/white"
				        /-->
				        
				    <Spinner
				  		android:id="@+id/stem_angle_spinner"
				        android:layout_width="match_parent"
				        android:layout_height="wrap_content"
				        android:textColor="@color/white"
				        android:spinnerMode="dialog"
				        />
			        
			        
			        
			    </LinearLayout>  
			    
			    
			    <LinearLayout 
			        android:id="@+id/stem_length"
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:orientation="vertical"
			        android:layout_marginTop="20dp">
			        
			        <TextView
			        android:id="@+id/stem_length_title"
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:text="Stem Length"
			        android:textSize="22dp"
			        android:textColor="@color/white"/>
			            
			  		<Spinner
				  		android:id="@+id/stem_length_spinner"
				        android:layout_width="match_parent"
				        android:layout_height="wrap_content"
				        android:textColor="@color/white"
				        android:spinnerMode="dialog"
				        />
			        

			        
			        
			    </LinearLayout> 
			    
			    
			    <LinearLayout 
			        android:id="@+id/spacers_container"
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:orientation="vertical"
			        android:layout_marginTop="20dp">
			        
			        <TextView
			        android:id="@+id/spacers_title"
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:text="Spacers (mm)"
			        android:textSize="22dp"
			        android:textColor="@color/white"/>
			            
			  		<!-- EditText
				  		android:id="@+id/spacers_edit"
				        android:layout_width="match_parent"
				        android:layout_height="wrap_content"
				        android:text="0"
				        android:textColor="@color/white"
				        /-->
				        
				    <Spinner
				  		android:id="@+id/spacers_spinner"
				        android:layout_width="match_parent"
				        android:layout_height="wrap_content"
				        android:textColor="@color/white"
				        android:spinnerMode="dialog"
				        />
			        
			        
			        
			    </LinearLayout>  
			    
			    <LinearLayout 
			        android:id="@+id/headset_container"
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:orientation="vertical"
			        android:layout_marginTop="20dp">
			        
			        <TextView
			        android:id="@+id/headset_title"
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:text="Headset Cap (mm)"
			        android:textSize="22dp"
			        android:textColor="@color/white"/>
			            
			  		<!-- EditText
				  		android:id="@+id/spacers_edit"
				        android:layout_width="match_parent"
				        android:layout_height="wrap_content"
				        android:text="0"
				        android:textColor="@color/white"
				        /-->
				        
				    <Spinner
				  		android:id="@+id/headset_spinner"
				        android:layout_width="match_parent"
				        android:layout_height="wrap_content"
				        android:textColor="@color/white"
				        android:spinnerMode="dialog"
				        />
			        
			        
			        
			    </LinearLayout>
			    
			    <Button 
			            
			        android:id="@+id/submit_button"
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:onClick="submitClickHandler"
			        android:text="Submit"
			        android:layout_marginTop="20dp"/>
			    
			    </LinearLayout>
	        
	        </ScrollView>

        
    </LinearLayout>

</LinearLayout>
