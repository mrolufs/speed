<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@color/black">
    
            <ImageView 
	        android:id="@+id/pd_logo_container"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:src="@drawable/pd_logo_horizontal_white"/>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        
        <ImageView 
	        android:id="@+id/pd_logo_container"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:src="@drawable/pd_logo"/>
                
                    
   		<ImageView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:src="@drawable/grid_vertical"
	        android:cropToPadding="true"
		    android:scaleType="centerCrop"/>
   		
   		<ImageView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:src="@drawable/grid_vertical"
	        android:cropToPadding="true"
		    android:scaleType="centerCrop"/>
   		
   		<ImageView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:src="@drawable/grid_vertical"
	        android:cropToPadding="true"
		    android:scaleType="centerCrop"/>  
		    
   		<ImageView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:src="@drawable/grid_vertical"
	        android:cropToPadding="true"
		    android:scaleType="centerCrop"/>    				
   	
        
    </LinearLayout>

    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
    
	    <LinearLayout
	        android:layout_width="wrap_content"
	        android:layout_height="match_parent"
	        android:orientation="vertical">
        
		    <ImageView 
		        android:id="@+id/grid_container_a"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:src="@drawable/grid"
		        android:cropToPadding="true"
		        android:scaleType="centerCrop"/>
		    
		    <ImageView 
		        android:id="@+id/grid_container_b"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:src="@drawable/grid"
		        android:cropToPadding="true"
		        android:scaleType="centerCrop"/>
		    
		    <ImageView 
		        android:id="@+id/grid_container_c"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:src="@drawable/grid"
		        android:cropToPadding="true"
		        android:scaleType="centerCrop"/>
		    
		    <ImageView 
		        android:id="@+id/grid_container_d"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:src="@drawable/grid"
		        android:cropToPadding="true"
		        android:scaleType="centerCrop"/>
		    
		    <ImageView 
		        android:id="@+id/grid_container_e"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:src="@drawable/grid"
		        android:cropToPadding="true"
		        android:scaleType="centerCrop"/>
	        
        </LinearLayout>
    
    
	    <ScrollView 
	        android:id="@+id/scrollView"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent">
	        
	        <LinearLayout 
			    android:layout_width="match_parent"
			    android:layout_height="match_parent"
			    android:orientation="vertical"
			    android:paddingLeft="15dp">
	
			    

			    
			    <LinearLayout 
			        android:id="@+id/type_of_riding"
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:orientation="vertical"
			        android:layout_marginTop="20dp">
			        
			        <TextView
			        android:id="@+id/type_of_riding_title"
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:text="Type of Riding?"
			        android:textSize="22dp"
			        android:textColor="@color/white"/>
			            
			  		<!-- EditText
				  		android:id="@+id/stem_angle_edit"
				        android:layout_width="match_parent"
				        android:layout_height="wrap_content"
				        android:text=""
				        android:textColor="@color/white"
				        /-->
				        
				    <Spinner
				  		android:id="@+id/type_of_riding_spinner"
				        android:layout_width="match_parent"
				        android:layout_height="wrap_content"
				        android:textColor="@color/white"
				        android:spinnerMode="dropdown"
				        
				        />
			        
			        
			        
			    </LinearLayout>  

			    
			   <LinearLayout 
			        android:id="@+id/type_of_triathlon_course"
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:orientation="vertical"
			        android:layout_marginTop="20dp"
			        android:visibility="gone">
			        
			        <TextView
			        android:id="@+id/type_of_hand_position_title"
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:text="Type of triathlon course?"
			        android:textSize="22dp"
			        android:textColor="@color/white"/>
			            
			  		<!-- EditText
				  		android:id="@+id/stem_angle_edit"
				        android:layout_width="match_parent"
				        android:layout_height="wrap_content"
				        android:text=""
				        android:textColor="@color/white"
				        /-->
				        
				    <Spinner
				  		android:id="@+id/type_of_triathlon_course_spinner"
				        android:layout_width="match_parent"
				        android:layout_height="wrap_content"
				        android:textColor="@color/white"
				        android:spinnerMode="dropdown"
				        />
     
			    </LinearLayout> 
			    
			    
			    
			    <LinearLayout 
			        android:id="@+id/type_of_hand_position"
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:orientation="vertical"
			        android:layout_marginTop="20dp"
			        android:visibility="visible">
			        
			        <TextView
			        android:id="@+id/type_of_hand_position_title"
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:text="Change positions frequently?"
			        android:textSize="22dp"
			        android:textColor="@color/white"/>
			            
			  		<!-- EditText
				  		android:id="@+id/stem_angle_edit"
				        android:layout_width="match_parent"
				        android:layout_height="wrap_content"
				        android:text=""
				        android:textColor="@color/white"
				        /-->
				        
				    <Spinner
				  		android:id="@+id/type_of_hand_position_spinner"
				        android:layout_width="match_parent"
				        android:layout_height="wrap_content"
				        android:textColor="@color/white"
				        android:spinnerMode="dialog"
				        />
     
			    </LinearLayout>  
			    
			    

			    
			    <Button 
			            
			        android:id="@+id/submit_button"
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:onClick="submitClickHandler"
			        android:text="Submit"
			        android:layout_marginTop="20dp"
			        android:visibility="visible"/>
			    
			    </LinearLayout>
	        
	        </ScrollView>

        
    </LinearLayout>

</LinearLayout>
