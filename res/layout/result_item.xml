<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/listitemselector" >
    
    <RelativeLayout
        android:id="@+id/detail_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/listitemselector" >
    
    <WebView
        android:id="@+id/webView"
        android:layout_width="220px"
        android:layout_height="220px"
        android:layout_marginRight="6dp"
        android:layout_marginBottom="6dp"
        android:layout_marginTop="6dp"
        />
    
    <TextView 
        android:id="@+id/title"
        android:layout_toRightOf="@id/webView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:textSize="19dp"
        android:textStyle="bold"
        android:layout_marginBottom="3dp"
        />
    
    	<LinearLayout
    	    android:id="@+id/color_container"
	            android:layout_width="match_parent"
	        	android:layout_height="wrap_content"
	        	android:orientation="horizontal"
	        	android:layout_toRightOf="@id/webView"
	        	android:layout_below="@id/title">

	    <TextView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="Colors : "
	        android:textColor="#ffffff"
	        android:textSize="13dp"/>

	   
	      <TextView
	        android:id="@+id/colors"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textStyle="bold"
	        android:textSize="13dp"
	        android:text="Gloss Black"
	        android:textColor="#ffffff"/>
	      
	      	    
	    </LinearLayout>
	    
    	<LinearLayout
    	    	android:id="@+id/material_container"
	           android:layout_width="match_parent"
	        	android:layout_height="wrap_content"
	        	android:orientation="horizontal"
	        	android:layout_toRightOf="@id/webView"
	        	android:layout_below="@id/color_container">

	    <TextView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="Material : "
	        android:textColor="#ffffff"
	        android:textSize="13dp"/>

	   
	      <TextView
	        android:id="@+id/material"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textStyle="bold"
	        android:textSize="13dp"
	        android:text="Forged 6061-T6 AL"
	        android:textColor="#ffffff"/>
	      
	      	    
	    </LinearLayout>
	    
    	<LinearLayout
    	    	android:id="@+id/armrest_container"
	           android:layout_width="match_parent"
	        	android:layout_height="wrap_content"
	        	android:orientation="horizontal"
	        	android:layout_toRightOf="@id/webView"
	        	android:layout_below="@id/material_container">

	    <TextView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="Armrests : "
	        android:textColor="#ffffff"
	        android:textSize="13dp"/>

	   
	      <TextView
	        android:id="@+id/armrests"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textStyle="bold"
	        android:textSize="13dp"
	        android:text="F-19 injection molded"
	        android:textColor="#ffffff"/>
	      
	      	    
	    </LinearLayout>
	    
    	
    	<LinearLayout
    	    	android:id="@+id/armrest_material_container"
	           android:layout_width="match_parent"
	        	android:layout_height="wrap_content"
	        	android:orientation="horizontal"
	        	android:layout_toRightOf="@id/webView"
	        	android:layout_below="@id/armrest_container">

	    <TextView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="Material : "
	        android:textColor="#ffffff"
	        android:textSize="13dp"/>

	   
	      <TextView
	        android:id="@+id/armrests_material"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textStyle="bold"
	        android:textSize="13dp"
	        android:text="Forged 6061-T6 AL"
	        android:textColor="#ffffff"/>
	      
	      	    
	    </LinearLayout>
    
    	
    	<LinearLayout
    	    	android:id="@+id/weight_container"
	           android:layout_width="match_parent"
	        	android:layout_height="wrap_content"
	        	android:orientation="horizontal"
	        	android:layout_toRightOf="@id/webView"
	        	android:layout_below="@id/armrest_material_container">

	    <TextView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="Weight : "
	        android:textColor="#ffffff"
	        android:textSize="13dp"/>

	   
	      <TextView
	        android:id="@+id/weight"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textStyle="bold"
	        android:textSize="13dp"
	        android:text="470 grams"
	        android:textColor="#ffffff"/>
	      
	      	    
	    </LinearLayout>
    	
    	</RelativeLayout>
    
    <TextView 
        android:id="@+id/text_description"
        android:layout_below="@id/detail_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:layout_marginBottom="6dp"
        android:textSize="12dp"
        android:paddingBottom="6dp"
        />
    

    

</RelativeLayout>
