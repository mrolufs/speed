<?xml version="1.0" encoding="utf-8"?>
<selector
	xmlns:android="http://schemas.android.com/apk/res/android">

	<item
		android:state_pressed="true">
		<shape>
			<gradient
				android:endColor="#ff0000"
				android:centerColor="#ff0000"
				android:startColor="#ff0000"
				
				android:angle="270" />
			<stroke
				android:width="1px"
				android:color="#000" />
			<corners
				android:radius="7dp" />
			<padding
				android:left="2dp"
				android:top="2dp"
				android:right="2dp"
				android:bottom="2dp" />
		</shape>
	</item>

	<item
		android:state_focused="true">
		<shape>
			<gradient
				android:endColor="#ff0000"
				android:centerColor="#ff0000"
				android:startColor="#ff0000"
				android:angle="270" />
			<stroke
				android:width="1px"
				android:color="#000" />
			<corners
				android:radius="7dp" />
			<padding

				android:left="2dp"
				android:top="2dp"
				android:right="2dp"
				android:bottom="2dp" />
		</shape>
	</item>
	
	
	<item
		android:state_enabled="false">
		<shape>
			<gradient
				android:endColor="#ff0000"
				android:centerColor="#ff0000"
				android:startColor="#ff0000"
				android:angle="270" />
			<stroke
				android:width="1px"
				android:color="#000" />
			<corners
				android:radius="7dp" />
			<padding

				android:left="2dp"
				android:top="2dp" 
				android:right="2dp"
				android:bottom="2dp" />
		</shape>
	</item>
	
	

	<item>
		<shape>
			<gradient
				android:endColor="#ff0000"
				android:centerColor="#ff0000"
				android:startColor="#ff0000"
				android:angle="270" />
			<stroke
				android:width="1px"
				android:color="#000" />
			<corners
				android:radius="7dp" />
			<padding

				android:left="2dp"
				android:top="2dp"
				android:right="2dp"
				android:bottom="2dp" />
		</shape>
	</item>
</selector>
